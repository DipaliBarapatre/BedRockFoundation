<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Use for Estimation?</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name.upcase, edit_location_path(location), class:"button blue-gradient glossy icon-pencil" %></td>
    <td><%=h location.phone %></td>
    <td><%=h "#{location.address_1} #{location.city} #{location.province} #{location.zip}" %></td>
    <td style="text-align: center;"><%=raw "<span class='button green-gradient icon-tick'>YES</span>" if location.use_for_estimates == "yes" %></td>
  </tr>
<% end %>
</table>

<br />
