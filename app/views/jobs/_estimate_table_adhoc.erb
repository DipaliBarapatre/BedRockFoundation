<table>
	<thead>
	<tr>
		<th>Item</th>
		<th>Quantity</th>
		<th>Cost</th>
	</tr>
	</thead>
	<tbody>
	

	<tr>
		<td>Truck Gas Cost</td>
		<td><%= @job.adhoc_job.round_trip_distance %> miles</td>
		<td><%= money_from_cents @job.adhoc_job.truck_gas_cost %></td>
	</tr>
	<tr>
		<td>Truck Maintenance Cost</td>
		<td><%= @job.adhoc_job.round_trip_distance %> miles</td>
		<td><%= money_from_cents @job.adhoc_job.truck_maintenance_cost %></td>
	</tr>
	<tr class="endsection">
		<td>Driving Labor</td>
		<td><%= @job.adhoc_job.round_trip_distance %> miles</td>
		<td><%= money_from_cents @job.adhoc_job.driving_labor_cost %></td>
	</tr>

		<tr>
			<td>Working Labor</td>
			<td><%= @job.adhoc_job.working_labor_hours %> hours</td>
			<td><%= money_from_cents @job.adhoc_job.working_labor_cost %></td>
		</tr>
		<tr>
			<td>Materials</td>
			<td></td>
			<td><%= money_from_cents @job.adhoc_job.total_material_cost %></td>
		</tr>
		<tr class="endsection">
			<td>Total Cost</td>
			<td></td>
			<td><%= money_from_cents @job.adhoc_job.total_cost %></td>
		</tr>
	
		<tr>
			<td>Material Markup</td>
			<td></td>
			<td><%= money_from_cents @job.adhoc_job.total_material_markup %></td>
		</tr>
		<tr class="endsection">
			<td>Labor Markup</td>
			<td></td>
			<td><%= money_from_cents @job.adhoc_job.total_labor_markup %></td>
		</tr>
	
		<tr>
			<td><b>Base Price</b></td>
			<td></td>
			<td><%= money_from_cents @job.adhoc_job.total_price %></td>
		</tr>
	
		<tr>
			<td><b>Additional Price Added</b></td>
			<td></td>
			<td><%= money_from_cents(@job.additional_price.to_f * 100) %></td>
		</tr>
		<tr>
			<td><b>Job Additions Price</b></td>
			<td></td>
			<td><%= money_from_cents (@job.job_additions.collect{|a| a.addition_price_in_cents }.inject(0) {|result, element| result + element }).to_f %></td>
		</tr>
		<tr>
			<td><b>DISCOUNT</b></td>
			<td></td>
			<td><%= money_from_cents(@job.discount * 100) %></td>
		</tr>
		<tr>
			<td><b>FINAL PRICE</b></td>
			<td></td>
			<td><%= money_from_cents(@job.price_in_cents) %></td>
		</tr>

	</tbody>
</table>

	
	<h3>Job Additions:</h3>
	<% @job.job_additions.each do |j| %>
		Price: <%= money_from_cents j.addition_price_in_cents %><br />
		Desc: <%= j.addition_description %><br />
		----------------------------------------<br />
	<% end %>