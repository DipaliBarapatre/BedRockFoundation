
<br class="clear" />
<table class="table_liquid" cellspacing="0">
	<thead>
  <tr>
    <th>Job</th>
    <th>Next Action</th>
    <th>Notes</th>
    <th>Asssgned By</th>
    <th>Assigned To</th>
  </tr>
	</thead>
	<tbody>
  <% for status in @statuses %>
    <tr>
      <td><%=h status.job %></td>
      <td><%=h status.next_action %></td>
      <td><%=h status.notes %></td>
      <td><%=h status.assigned_by %></td>
      <td><%=h status.assigned_to %></td>
      <td><%= link_to "Show", status %></td>
      <td><%= link_to "Edit", edit_status_path(status) %></td>
      <td><%= link_to "Destroy", status, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
	</tbody>
</table>

<% content_for :subnav do %>
<li class="action positive"><%= link_to "+ Add a new Status", new_status_path %></li>
<% end %>


<% content_for :right_column do %>
	<div class="hint">
      <h3>Hint</h3>
      <p>This is a hint.</p>
    </div>
	<div class="list">
	  <h3>List Items</h3>
	  <ul>
	      <li><a href="#">link</a> <span class="date">date</span></li>
	  </ul>
	</div>
<% end %>