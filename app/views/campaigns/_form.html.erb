<% form_for @campaign do |f| %>
  <% if @campaign.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this post from being saved:</h2>

	      <ul>
	      <% @campaign.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

<dl>
  <dt><%= f.label :name %></dt>
	<dd><%= f.text_field :name, :class => "string", :size => 60 %></dd>
  <dt><%= f.label :started_on %></dt>
	<dd><%= f.date_select :started_on, :class => "date" %></dd>
  <dt><%= f.label :cost_in_cents %></dt>
	<dd><%= f.text_field :cost_in_cents, :class => "integer" %></dd>
</dl>
<p><%= f.submit "Save" %> or <%= f.submit "Save &amp; add another" %></p>
<% end %>
