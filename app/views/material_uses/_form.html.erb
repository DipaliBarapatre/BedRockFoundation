<%= form_for(@material_use) do |f| %>
  <% if @material_use.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@material_use.errors.count, "error") %> prohibited this material_use from being saved:</h2>

      <ul>
      <% @material_use.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :material_id, "Choose your Material" %><br />
    <%= f.select :material_id, Material.order("name ASC").map{|m| [m.list_label.html_safe, m.id] } %>
    <%= f.hidden_field :job_id %>
    <%= f.hidden_field :job_addition_id %>
  </div>
  <div class="field">
    <%= f.label :qty_estimated %><br />
    <%= f.text_field :qty_estimated, :class => "integer" %>
  </div>
  <div class="field">
    <%= f.label :qty_purchased %><br />
    <%= f.text_field :qty_purchased, :class => "integer" %>
  </div>
  <div class="field">
    <%= f.label :qty_used %><br />
    <%= f.text_field :qty_used, :class => "integer" %>
  </div>
  <div class="actions">
    <%= f.submit class: "button green-gradient glossy" %>
  </div>
<% end %>
