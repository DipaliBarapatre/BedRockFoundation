<h1>Listing materials</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Dimensions</th>
    <th>Qty per pack</th>
    <th>Price per pack</th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= link_to material.name, edit_material_path(material) %></td>
    <td><%= material.dimensions.html_safe %></td>
    <td><%= material.qty_per_pack %></td>
    <td><%= material.price_per_pack %></td>
    <td><%= link_to 'Edit', edit_material_path(material), class: "button blue-gradient" %></td>
    <td><%= link_to 'Destroy', material, confirm: 'Are you sure?', method: :delete, :class => "button red-gradient tiny" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Material', new_material_path, class: "button green-gradient glossy icon-plus" %>
