<h1>Listing materials</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Width</th>
    <th>Height</th>
    <th>Qty per pack</th>
    <th>Price per pack</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.width %></td>
    <td><%= material.height %></td>
    <td><%= material.qty_per_pack %></td>
    <td><%= material.price_per_pack %></td>
    <td><%= material.position %></td>
    <td><%= link_to 'Show', material %></td>
    <td><%= link_to 'Edit', edit_material_path(material) %></td>
    <td><%= link_to 'Destroy', material, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

