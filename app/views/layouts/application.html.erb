<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="description" content="Reflect Template" />
		<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
		<title>Bedrock Foundations Scheduling System</title>
		<%= stylesheet_link_tag 'redmond/ui.all', 'dataTables/jquery.dataTables', 'dataTables/src/demo_table_jui', 'select2', "stylesheets/style_all.css", "stylesheets/style2.css", 'gmaps4rails', 'jquery.fancybox', 'shortcodes', 'colors', 'elfinder/elfinder.min', 'elfinder/theme' %>
		<!--[if IE 6]>
			<script src="/javascripts/ie6pngfix.js"></script>
			<script>
				DD_belatedPNG.fix('#head, a, a span, img, .message p, .click_to_close, .ie6fix');
			</script>
		<![endif]--> 
		<link href="/assets/helpers/jquery.fancybox-buttons.css" media="all" rel="stylesheet" type="text/css" />
		<% if Rails.env == "production" %>
		<script src="http://leaflet.cloudmade.com/dist/leaflet.js" type="text/javascript"></script>
		<link href="http://leaflet.cloudmade.com/dist/leaflet.css" media="all" rel="stylesheet" type="text/css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="http://leaflet.cloudmade.com/dist/leaflet.ie.css" /><![endif]-->

		<% else %>
		<%= javascript_include_tag "leaflet" %>
		<%= stylesheet_link_tag "leaflet" %>
		<% end %>
		<script src="/assets/mxn/mxn.js?(leaflet)" type="text/javascript"></script> 


		<%= javascript_include_tag "jquery-1.7.1.min", 'jquery.simplemodal.1.4.2.min', 'jquery-ui', 'jquery.flash', 'jquery.wysiwyg', 'tablesorter', 'jquery.tablesorter.pager', 'custom', "application", "jrails", "rails", 'gmaps4rails/gmaps4rails.base', 'gmaps4rails/gmaps4rails.googlemaps', 'jquery.easing-1.3.pack', 'jquery.mousewheel-3.0.4.pack', 'jquery.fancybox.pack', 'select2','dataTables/jquery.dataTables','elfinder/elfinder.min', 'elfinder/proxy/elFinderSupportVer1' %>
		<script src="/assets/helpers/jquery.fancybox-buttons.js" type="text/javascript"></script>
		<%= csrf_meta_tag %>
		<%= yield :head %>
	</head>
	<body>
		<div id="top">
			<a style="margin-top:10px; margin-left: 10px; color: #fff; position: absolute;" href="#" class="tog">hide/show Navigation</a>
			<div id="head">
				<% if notice %>
				<p class="notice"><%= notice %></p>
				<% end %>
				<% if alert %>
				<p class="alert"><%= alert %></p>
				<% end %>

				<div class="head_memberinfo">
					<br/>
					<% if current_user %>
						<span class='memberinfo_span'>
							Welcome <a href=""><%= current_user.name %></a>
						</span>
						<span>
							<%= link_to "Logout", destroy_user_session_url, :method => :delete %>
						</span>
						<% else %> 
						<span class="memberinfo_span">
							<%= link_to "Login", new_user_session_url %>
						</span>
					<% end %>
				</div>
			</div>
			<div id="bg_wrapper">
				<div id="main">
					<div id="content">
						<%= yield %>
					</div>
				</div>
				<% if current_user %>
					<div id="sidebar">
						<%= render :partial => "layouts/navigation" %>
					</div>
				<% end %>
			</div>
			<div id="footer">
				&nbsp;
			</div>
		</div><!-- end top -->
		<%= yield :js_bottom %>
		<%= yield :scripts %>
		
		<script type="text/javascript" charset="utf-8">

			jQuery(function() {

				jQuery("#top a.tog").click(function() {
					jQuery("#sidebar").toggle();
					jQuery("#nav").toggle();
					jQuery("#bg_wrapper").toggleClass("hiddenClass");
					jQuery("#content").toggleClass("hiddenClass");
				});
			});
				</script>
	</body>
</html>